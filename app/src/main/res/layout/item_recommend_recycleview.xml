<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <android.support.constraint.Guideline
            android:id="@+id/recommend_rv_item_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>
        <com.example.rose.himalaya.view.RoundRectImageView
            android:id="@+id/recommend_rv_item_album_cover"
            android:layout_width="@dimen/recommend_recycleview_item_image_width"
            android:layout_height="@dimen/recommend_recycleview_item_image_height"
            tools:ignore="contentDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/recommend_recycleview_itme_content_margin_left"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toRightOf="@id/recommend_rv_item_album_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/recommend_rv_item_album_title_tv"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recommend_recycleview_itme_content_tv_title_size"
                android:ellipsize="end"
                android:lines="1"/>
            <TextView
                android:id="@+id/recommend_rv_item_album_description_tv"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="111111111"
                android:ellipsize="end"
                android:textColor="#fF848484"
                android:textSize="@dimen/recommend_recycleview_itme_content_tv_zi_title_size"
                android:layout_marginTop="@dimen/recommend_recycleview_itme_content_tv_zi_title_margin_top"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/bf"/>
                <TextView
                    android:id="@+id/recommend_rv_item_album_play_count"
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:text="111111111"
                    android:textColor="#ff848484"
                    android:textSize="8sp"
                    android:layout_marginLeft="2dp"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/lb"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/recommend_rv_item_album_content_size"
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:text="111111111"
                    android:textColor="#ff848484"
                    android:textSize="8sp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>